                            <Trigger Property="ToggleButton.IsEnabled" Value="False">
                                <Setter TargetName="imgTopToggleButton" Property="Source" Value="{converters2:ResolveImagePath Path=SportsIconDisabled.png}" />
                                <Setter Property="Foreground" Value="#5A6164" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="true">
